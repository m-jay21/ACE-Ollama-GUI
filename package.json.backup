{
  "name": "aces-local-ai",
  "version": "4.0.0",
  "description": "**ACE** is a graphical user interface (GUI) for **Ollama**, designed to eliminate the need for command-line usage. This project provides an intuitive interface for users to interact with locally installed AI models.",
  "main": "src/main.js",
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^23.6.0",
    "electron-updater": "^6.1.7"
  },
  "scripts": {
    "start": "electron .",
    "prepare-installer": "node install_scripts/build_installer.js",
    "dist": "npm run prepare-installer && electron-builder",
    "dist:win": "npm run prepare-installer && electron-builder --win",
    "dist:mac": "npm run prepare-installer && electron-builder --mac",
    "dist:linux": "npm run prepare-installer && electron-builder --linux",
    "postinstall": "echo 'Please install Python dependencies: pip install -r requirements.txt'"
  },
  "build": {
    "appId": "com.ace.ollama",
    "productName": "ACE's Local AI",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/logos/icon-512.png",
      "artifactName": "${productName}-v${version}-Windows.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ACE's Local AI"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/logos/icon-512.png",
      "artifactName": "${productName}-v${version}.${ext}",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/logos/icon-512.png",
      "artifactName": "${productName}-v${version}.${ext}",
      "category": "Utility"
    },
    "files": [
      "**/*",
      "!logos/*.psd",
      "!logos/*.ai",
      "!__pycache__/**/*",
      "!**/__pycache__/**/*",
      "!*.pyc",
      "!src/data/theMessages.txt",
      "!venv/**/*",
      "!venv/*",
      "!node_modules/**/*",
      "!node_modules/*",
      "!dist/**/*",
      "!dist/*",
      "!.git/**/*",
      "!.git/*",
      "!test_*.py",
      "!test_*.txt",
      "!vector_store.*",
      "!*.pkl",
      "!python_installer/**/*"
    ],
    "directories": {
      "buildResources": "src/assets/logos",
      "output": "dist"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "src/backend",
        "to": "src/backend",
        "filter": [
          "*.py"
        ]
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "python_installer",
        "to": "python_installer"
      },
      {
        "from": "install_scripts",
        "to": "install_scripts"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "m-jay21",
      "repo": "ACE-Ollama-GUI"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-jay21/ACE-Ollama-GUI.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/m-jay21/ACE-Ollama-GUI/issues"
  },
  "homepage": "https://github.com/m-jay21/ACE-Ollama-GUI#readme",
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
